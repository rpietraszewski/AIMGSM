@using AIMGSM.ViewModels;
@model FormVM
<header class="masthead" >
    <div class="container">
        <div class="row">
            <div class="col-md-6" style="position: relative">
                <div class="masthead-heading text-start">Skontaktuj się z nami</div>
                <div class="masthead-subheading text-start">Niezawodny serwis telefonów, hulajnóg oraz laptopów. <br />Zapraszamy </div>
                <a class="btn btn-danger btn-sm text-uppercase" href="~/Home/Contact">Kontakt</a>
            </div>
            <div class="col-md-6">
                <form asp-action="Index" method="post" class="form-back" enctype="multipart/form-data">
                        <div class="wrap1">
                            <label class="text-black fw-bold text-uppercase">Formularz zgłoszeniowy</label>
                            <div class="form-group pt-3">
                                <input asp-for="Name" class="form-control" placeholder="Imię i Nazwisko"/>
                            </div>
                            <div class="form-group pt-3">
                                <input asp-for="PhoneNumber" type="tel" class="form-control" placeholder="Numer Telefonu" />
                            </div>
                            <div class="form-group pt-3">
                                <input asp-for="Email" type="email" class="form-control" placeholder="E-mail" />
                            </div>
                            <div class="form-group pt-3">
                                <input asp-for="Topic" class="form-control" placeholder="Temat" />
                            </div>
                            <div class="form-group pt-3">
                                <textarea asp-for="Description" type="text" class="form-control" placeholder="Opisz problem..." rows="3"></textarea>
                            </div>
                            <div class="form-group pt-3 py-3">
                                <input asp-for="ImageUrl" name="ImageUrl" type="file" class="form-control"/>
                            </div>
                            <div class="form-group pt-3">
                                <button type="submit" class="btn btn-danger ">Wyślij</button>
                            </div>
                        </div>
                    </form>
            </div>
        </div>
    </div>
</header>
