@using AIMGSM.ViewModels;
@using AIMGSM.Data;
@model IEnumerable<PriceVM>
<section class="page-section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-sm-8">
        <div class="text-center">
            <h2 class="section-heading">Cennik usług  @ViewBag.Brand @ViewBag.Model:</h2>
        </div>
        
        
        <table class="table">
            <tr class="table-dark">
                <th>Nazwa usługi</th>
                <th>Cena oryginalna</th>
                <th>Cena z zamiennikiem</th>
                <th></th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.OriginalPrice zł</td>
                    <td>@item.SecondPrice zł</td>
                    <td>
                        <form asp-action="PriceDelete" method="post">
                            <input type="hidden" name="id" value="@item.Id" />
                            <button type="submit" class="btn btn-warning">Usuń</button>
                        </form>
                    </td>
                </tr>
            }
        </table>
        </div>
        </div>
    </div>
</section>