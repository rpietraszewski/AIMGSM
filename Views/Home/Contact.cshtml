        <h2 class="section-heading text-uppercase">Skontaktuj się z nami</h2>
        </div>
<form method="post" action="@Url.Action("Contact","Home")">
    <div class="form-group">
                <label class="section-subheading text-muted">Temat w jakim się pan/pani kontaktuje</label>
        <input type="text" id="Name" name="Name" class="form-control" value="@Model.Name" />
        @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <label class="section-subheading text-muted">Email do kontaktu</label>
        <input type="email" id="Email" name="Email" class="form-control" value="@Model.Email" />
        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
                <label class="section-subheading text-muted">Opis tematu/problemu</label>
        <textarea id="Message" name="Message" class="form-control">@Model.Message</textarea>
        @Html.ValidationMessageFor(m => m.Message, "", new { @class = "text-danger" })
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>
    </div>
</section>